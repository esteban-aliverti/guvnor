<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
  xmlns:guvnor='urn:import:org.drools.guvnor.client.modeldriven.ui'>

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants" />
  <ui:with field="images" type="org.drools.guvnor.client.resources.Images" />
  <ui:with field="res" type="org.drools.guvnor.client.resources.WizardResources" />

  <gwt:VerticalPanel ui:field="container" width="100%">
    <gwt:HorizontalPanel ui:field="msgDuplicateBindings" styleName="{res.style.wizardDTableMessageContainer}" visible="false">
      <gwt:HorizontalPanel>
        <gwt:Image resource="{images.warningLarge}" />
        <gwt:Label text="{i18n.DecisionTableWizardDuplicateBindings}" styleName="{res.style.wizardDTableMessage}" />
      </gwt:HorizontalPanel>
    </gwt:HorizontalPanel>
    <gwt:HorizontalPanel ui:field="msgIncompletePatterns" styleName="{res.style.wizardDTableMessageContainer}" visible="false">
      <gwt:HorizontalPanel>
        <gwt:Image resource="{images.warningLarge}" />
        <gwt:Label text="{i18n.DecisionTableWizardIncompletePatterns}" styleName="{res.style.wizardDTableMessage}" />
      </gwt:HorizontalPanel>
    </gwt:HorizontalPanel>
    <gwt:VerticalPanel>
      <gwt:Label text="{i18n.DecisionTableWizardDescriptionFactPatternsPage}" styleName="{res.style.wizardDTableCaption}"/>
      <gwt:HorizontalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardAvailableTypes}" styleName="{res.style.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="availableTypesContainer" styleName="{res.style.wizardDTableList}" height="260px" width="280px" />
        </gwt:VerticalPanel>
        <gwt:VerticalPanel ui:field="buttonBar" styleName="{res.style.wizardDTableButtons}">
          <gwt:PushButton ui:field="btnAdd" enabled="false">&gt;&gt;</gwt:PushButton>
          <gwt:PushButton ui:field="btnRemove" enabled="false">&lt;&lt;</gwt:PushButton>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <gwt:Label text="{i18n.DecisionTableWizardChosenTypes}" styleName="{res.style.wizardDTableHeader}" />
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="chosenPatternsContainer" styleName="{res.style.wizardDTableList}" height="260px" width="280px" />
        </gwt:VerticalPanel>
        <gwt:VerticalPanel styleName="{res.style.wizardDTableButtons}">
          <gwt:PushButton ui:field="btnMoveUp" enabled="false" />
          <gwt:PushButton ui:field="btnMoveDown" enabled="false" />
        </gwt:VerticalPanel>
      </gwt:HorizontalPanel>
      <gwt:VerticalPanel ui:field="patternDefinition" visible="false">
        <gwt:HorizontalPanel ui:field="bindingContainer" styleName="{res.style.wizardDTableFieldContainerValid}">
          <gwt:Label text="{i18n.Binding}" styleName="{res.style.wizardDTableFields}" />
          <gwt:TextBox ui:field="txtBinding" enabled="false" styleName="{res.style.wizardDTableFields}"></gwt:TextBox>
          <gwt:Image resource="{images.mandatory}" title="{i18n.MandatoryField}" styleName="{res.style.wizardDTableFields}" />
        </gwt:HorizontalPanel>
        <gwt:HorizontalPanel styleName="{res.style.wizardDTableFieldContainerValid}">
          <gwt:Label text="{i18n.DTLabelFromEntryPoint}" styleName="{res.style.wizardDTableFields}" />
          <gwt:TextBox ui:field="txtEntryPoint" enabled="false" styleName="{res.style.wizardDTableFields}" />
        </gwt:HorizontalPanel>
        <gwt:HorizontalPanel ui:field="cepWindowContainer" styleName="{res.style.wizardDTableFieldContainerValid}" visible="false">
          <gwt:Label text="{i18n.DTLabelOverCEPWindow}" styleName="{res.style.wizardDTableFields}" />
          <guvnor:CEPWindowOperatorsDropdown ui:field="ddCEPWindow" styleName="{res.style.wizardDTableFields}" />
        </gwt:HorizontalPanel>
      </gwt:VerticalPanel>
    </gwt:VerticalPanel>
  </gwt:VerticalPanel>

</ui:UiBinder>