<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants" />
  <ui:with field='images' type='org.drools.guvnor.client.resources.Images' />

  <gwt:DockLayoutPanel>
    <gwt:north size="25">
      <gwt:SimplePanel ui:field="menuContainer" />
    </gwt:north>
    <gwt:center>
      <gwt:ScrollPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel ui:field="modulesTreeContainer" />
          <gwt:SimplePanel ui:field="globalModulesTreeContainer" />
        </gwt:VerticalPanel>
      </gwt:ScrollPanel>
    </gwt:center>
    <gwt:south size="28">
      <gwt:HorizontalPanel styleName="icon-bar">
        <gwt:HorizontalPanel>
          <gwt:HTMLPanel styleName="icon-bar-item">
            <gwt:Image ui:field="imgExpandAll" resource="{images.expandAll}" title="{i18n.ExpandAll}" />
          </gwt:HTMLPanel>
          <gwt:HTMLPanel styleName="icon-bar-item">
            <gwt:Image ui:field="imgCollapseAll" resource="{images.collapseAll}" title="{i18n.CollapseAll}" />
          </gwt:HTMLPanel>
          <gwt:HTMLPanel styleName="icon-bar-item">
            <gwt:Image ui:field="imgFlatView" resource="{images.flatView}" title="{i18n.FlatView}" />
          </gwt:HTMLPanel>
          <gwt:HTMLPanel styleName="icon-bar-item">
            <gwt:Image ui:field="imgHierarchicalView" resource="{images.hierarchicalView}" title="{i18n.HierarchicalView}" />
          </gwt:HTMLPanel>
        </gwt:HorizontalPanel>
      </gwt:HorizontalPanel>
    </gwt:south>
  </gwt:DockLayoutPanel>

</ui:UiBinder>